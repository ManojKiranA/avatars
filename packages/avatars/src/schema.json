      "maximum": 50
    },
    "dataUri": {
      "type": "boolean",
      "title": "Data URI"
    },
    "width": {
      "type": "number",
      "title": "Width",
      "minimum": 0
    },
    "height": {
      "type": "number",
      "title": "Height",
      "minimum": 0
    },
    "margin": {
      "type": "number",
      "title": "Margin",
