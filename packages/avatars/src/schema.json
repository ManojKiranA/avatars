      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "color": {
      "type": "string",
      "pattern": "^#([a-fA-F0-9]{3}|[a-fA-F0-9]{6}|[a-fA-F0-9]{8})+$"
